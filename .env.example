# Customer App Environment Variables
# Copy this file to .env.local and update with your values

# Database Service API URL
# Local: http://localhost:3001/api
# Production: https://api.auctionspulse.com/api
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# Application URL (optional, for redirects)
# Production: https://app.auctionspulse.com
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WebSocket URL for real-time bidding (optional)
# Set to your API Gateway WebSocket URL in production
NEXT_PUBLIC_WS_URL=
